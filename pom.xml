<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- ==========================================================
	     📘 Корневой pom.xml
	     Это главный конфигурационный файл Maven.
	     Он управляет всеми модулями проекта (модульная структура).
	     ========================================================== -->

	<modelVersion>4.0.0</modelVersion>

	<!-- ==========================================================
	     🧩 Родитель — Spring Boot Starter Parent
	     Подтягивает все стандартные версии зависимостей и плагинов,
	     включая компилятор, тесты и плагины сборки.
	     Благодаря этому не нужно указывать версии вручную в каждом модуле.
	     ========================================================== -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.3.6</version>
		<relativePath/> <!-- relativePath пустой, потому что это не локальный pom -->
	</parent>

	<!-- ==========================================================
	     🏷️ Общие данные о проекте
	     Эти поля определяют координаты артефакта (GAV):
	     groupId + artifactId + version = уникальный ID проекта.
	     ========================================================== -->
	<groupId>com.ann</groupId>
	<artifactId>testProj</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<!-- packaging=pom означает, что этот pom — "агрегатор" модулей,
	     а не самостоятельное приложение. -->
	<packaging>pom</packaging>

	<!-- ==========================================================
	     🧱 Модули проекта
	     Здесь перечислены все подпроекты (модули), которые Maven
	     соберёт вместе. Каждый модуль имеет свой pom.xml.
	     ========================================================== -->
	<modules>
		<module>backend</module> <!-- Основной модуль приложения (Spring Boot backend) -->

		<!-- Можно добавить другие, например:
		     <module>frontend</module>
		     <module>api-autotests</module>
		     <module>shared</module>
		-->
	</modules>

	<!-- ==========================================================
	     ⚙️ Общие свойства проекта
	     Здесь задаются глобальные параметры — например, версия Java,
	     которую будут использовать все модули.
	     ========================================================== -->
	<properties>
		<java.version>21</java.version> <!-- проект компилируется и запускается на Java 21 -->
	</properties>

</project>
